<!-- キーとバリューを取得してフラッシュメッセージを表示 -->
<% flash.each do |key, value| %>
  <!-- div要素を生成 -->
  <%= content_tag(:div, value, class: "alert alert-#{key}") %>
<% end %>

<!-- deviseモデル関連のエラーを表示 -->
